{
  "version": 1,
  "meta": {
    "name": "omnigate-default",
    "description": "Default Omnigate policy: allow safe reads, deny writes by default."
  },
  "defaults": {
    "default_action": "deny",
    "max_body_bytes": 262144
  },
  "rules": [
    {
      "id": "allow-gets",
      "when": { "method": "GET" },
      "action": "allow",
      "reason": "read ok"
    },
    {
      "id": "allow-heads",
      "when": { "method": "HEAD" },
      "action": "allow",
      "reason": "head ok"
    },
    {
      "id": "deny-puts",
      "when": { "method": "PUT" },
      "action": "deny",
      "reason": "put blocked"
    },
    {
      "id": "deny-deletes",
      "when": { "method": "DELETE" },
      "action": "deny",
      "reason": "delete blocked"
    }
  ]
}
